{
  "name": "claude-error-learning",
  "version": "2.0.0",
  "description": "Error learning system with convergence engine -- captures errors, researches root causes via multi-agent pipeline, debates findings, and produces convergence reports with actionable tasks.",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash|Execute",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/hooks/command-validator.py\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/hooks/fix-tracker.py\""
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/hooks/error-logger.py\""
          },
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/hooks/convergence-dispatcher.py\""
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/hooks/error-curator.py\""
          },
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/hooks/convergence-synthesizer.py\""
          }
        ]
      }
    ]
  },
  "commands": {
    "error-learning": {
      "description": "View and manage the error learning database",
      "file": "commands/error-learning.md"
    },
    "converge": {
      "description": "Convergence engine -- capture, research, debate, and converge issues into actionable tasks",
      "file": "commands/converge.md"
    }
  }
}
